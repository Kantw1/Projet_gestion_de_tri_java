<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="ihm.AjouterAdminController"

      spacing="10" alignment="CENTER" style="-fx-padding: 20;">

    <Label text="Ajouter un Administrateur" style="-fx-font-size: 16px;"/>

    <TextField fx:id="nomField" promptText="Nom"/>
    <TextField fx:id="prenomField" promptText="Prénom"/>
    <TextField fx:id="emailField" promptText="Email"/>
    <PasswordField fx:id="motDePasseField" promptText="Mot de passe"/>

    <Button text="Créer" onAction="#handleCreerAdmin"/>
</VBox>
